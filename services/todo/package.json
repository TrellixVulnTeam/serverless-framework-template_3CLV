  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/plugin-proposal-decorators": "^7.16.4",
    "@babel/plugin-transform-modules-commonjs": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@babel/runtime": "^7.16.0",
    "@nestjs/common": "^7.6.15",
    "@types/node": "^14.14.31",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "aws-sdk": "^2.1034.0",
    "babel-loader": "^8.2.3",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.4.1",
    "reflect-metadata": "^0.1.13",
    "typescript": "^4.5.2",
    "uuid": "^8.3.2",
    "webpack": "^5.64.2",
    "webpack-cli": "^4.9.1",
    "webpack-node-externals": "^3.0.0",
    "zip-webpack-plugin": "^4.0.1"
  },
  "scripts": {
    "build:dev": "yarn install --ignore-optional && webpack --config webpack.config.js --mode development --env STAGE=dev",
    "build:stg": "yarn install --ignore-optional && webpack --config webpack.config.js --mode production  --env STAGE=stg",
    "build:prd": "yarn install --ignore-optional && webpack --config webpack.config.js --mode production  --env STAGE=prd",
    "deploy:dev": "export LAMBDA_LAYER_VERSION=4 && sls deploy --stage=dev",
    "deploy:stg": "export LAMBDA_LAYER_VERSION=1 && sls deploy --stage=stg",
    "deploy:prd": "export LAMBDA_LAYER_VERSION=1 && sls deploy --stage=prd",
    "destroy:dev": "sls remove --stage=dev",
    "destroy:stg": "sls remove --stage=stg",
    "destroy:prd": "sls remove --stage=prd"
  },
  "dependencies": {}
}
